<!DOCTYPE html>
<html lang="en">
    <%- include('./parts/header') %> 
    <body>
        <%- include('./parts/navbar') %> 
        <div class="container">
            <div class="row justify-content-center my-4">
                
                <div class="col col-md-6 col-12">
                    <h3><%= product.name %></h3>
                    <h5 class="my-2">price: <%= product.price %> </h5>
                    <p><%= product.description %> </p>
                </div>
                <div class="col col-md-6 col-12">
                    <img src="/<%= product.image %>" alt="<%= product.name %> " class="img-product">
                    <form action="/product" method="POST" class="mt-3 w-50">
                        <input type="number" name="amount" class="form-control">
                        <input type="submit" value="add to cart" class="btn btn-primary mt-2">
                    </form>
                </div>
            </div>
        </div>
        <%- include('./parts/footer') %> 
    </body>
</html>